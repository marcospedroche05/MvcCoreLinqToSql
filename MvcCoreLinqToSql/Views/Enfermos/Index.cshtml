@model List<Enfermo>
<h1>Enfermos</h1>

@if(Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Inscripcion</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Fecha nacimiento</th>
                <th>Sexo</th>
                <th>Nss</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Enfermo enfermo in Model)
            {
                <tr>
                    <td>@enfermo.Inscripcion</td>
                    <td>@enfermo.Apellido</td>
                    <td>@enfermo.Direccion</td>
                    <td>@enfermo.FechaNacimiento</td>
                    <td>@enfermo.Sexo</td>
                    <td>@enfermo.NumeroSeguridad</td>
                    <td>
                        <a asp-controller="Enfermos" asp-action="Details" asp-route-inscripcion="@enfermo.Inscripcion" class="btn btn-info">Detalles</a>
                        <a asp-controller="Enfermos" asp-action="Delete" asp-route-inscripcion="@enfermo.Inscripcion" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
